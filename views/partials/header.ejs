<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>QuickPack</title>
  <link rel="stylesheet" href="/public/styles.css">
</head>
<body>
<header style="display:flex;align-items:center;justify-content:space-between;padding:16px 32px;background:#fff;box-shadow:0 1px 8px rgba(0,0,0,0.08);">
  <div style="display:flex;align-items:center;gap:12px">
    <img src="/public/logo.png" alt="logo" style="height:44px">
    <h3 style="margin:0;color:#1b4f72">QuickPack</h3>
  </div>
  <div>
    <% if (!currentUser) { %>
      <a href="/login" style="margin-right:12px">Login</a>
      <a href="/register">Register</a>
    <% } else { %>
      <span style="margin-right:12px">Hello, <%= currentUser.name %></span>
      <form style="display:inline" action="/logout" method="POST"><button>Logout</button></form>
    <% } %>
  </div>
</header>
<main style="padding: 20px;">
